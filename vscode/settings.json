{
  /** ------------ Workbench Settings ------------ **/
  "workbench.colorCustomizations": {
    "inlineparameters.annotationBackground": "#282A3600",
    "inlineparameters.annotationForeground": "#7b82af",
    "scrollbar.shadow": "#24292e00"
  },
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editorLargeFileConfirmation": 10024,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.tree.indent": 16,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Tokyo Night",
  "workbench.editor.empty.hint": "hidden",
  "workbench.sideBar.location": "right",

  /** ------------ Breadcrumbs Configurations ------------ **/
  "breadcrumbs.enabled": false,
  "breadcrumbs.symbolPath": "off",
  "breadcrumbs.filePath": "on",

  /** ------------ Editor Settings ------------ **/
  "editor.fontFamily": "Fira Code SemiBold, 'Hack Nerd Font', Monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": 400,
  "editor.lineHeight": 22,
  "editor.letterSpacing": 0.5,
  "editor.lineNumbers": "on",
  "editor.folding": true,
  "editor.glyphMargin": true,
  "editor.guides.indentation": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.stickyScroll.enabled": true,
  "editor.suggestSelection": "first",
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "expand",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  /** ------------ Terminal Configurations ------------ **/
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "Fira Code SemiBold, 'Hack Nerd Font', Monospace",
  "terminal.integrated.fontSize": 14,

  /** ------------ Additional Configurations ------------ **/
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",
  "window.menuBarVisibility": "toggle",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "code-runner.clearPreviousOutput": true
}
